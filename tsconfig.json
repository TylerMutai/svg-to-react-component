{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist/"
  },
  "include": [
    "**/*",
    "**/**/*"
  ]
}
